# Production Environment Variables Template
# Copy this to .env.production.local for production builds

NODE_ENV=production

# Discord Configuration
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_BOT_ID=your_discord_bot_id_here

# Public Discord Client ID (for frontend)
NEXT_PUBLIC_DISCORD_CLIENT_ID=your_discord_client_id_here

# OAuth Configuration (Production URLs)
NEXTAUTH_URL=https://your-vercel-app.vercel.app
DISCORD_REDIRECT_URI=https://your-vercel-app.vercel.app/api/auth/callback
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your_nextauth_secret_here
EXTAUTH_SECRET=your_extauth_secret_here

# Database Configuration - Neon PostgreSQL
DATABASE_URL=your_neon_database_url_here
POSTGRES_URL_NO_SSL=your_postgres_url_no_ssl_here
POSTGRES_HOST=your_postgres_host_here
NEON_PROJECT_ID=your_neon_project_id_here

# Stack Analytics
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your_stack_client_key_here

# Security
ENCRYPTION_KEY=your_encryption_key_here

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# Dashboard API Configuration
DASHBOARD_API_URL=https://your-domain.com/api
DASHBOARD_API_KEY=your_api_key_here
ENABLE_DASHBOARD_SYNC=true

# Bot Settings
DEFAULT_PREFIX=!
SYNC_COMMANDS=true
AI_ENABLED=true
MODERATION_ENABLED=true
REACTION_ROLES_ENABLED=true

# Logging & Monitoring
LOG_CHANNEL_NAME=aegis-logs
DEBUG=false
